{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": 8888
    }
  },
  "hosting": {
    "public": "dist/yggdrasill-angular",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "target": {
      "production": {
        "site": "yggdrasillproject.com"
      },
      "test": {
        "site": "test-ygg-proj.web.app"
      }
    }
  }
}
