rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Consenti la lettura a tutti
      allow read: if true;

      // Consenti la scrittura se l'utente Ã¨ autenticato o si sta utilizzando l'emulatore
      allow write: if request.auth != null || getSimulatorOrigin() != null;
    }
  }
}
